<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar_find_in_text"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?android:attr/colorBackground"
    android:elevation="8dp"
    android:visibility="gone"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/find_in_text"
            android:ems="10"
            android:gravity="start"
            android:id="@+id/toolbar_find_in_text_edit_text"
            android:background="@android:color/transparent"
            android:imeOptions="actionSearch"
            android:maxLines="1"/>
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/md_grey_300" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/arrow_up"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:gravity="end"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_height="wrap_content"
            android:tint="@color/md_grey_400"
            android:clickable="true"
            android:adjustViewBounds="false"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/arrow_down"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:gravity="end"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/md_grey_400"
            android:adjustViewBounds="false"/>
        <ImageView
            android:id="@+id/toolbar_find_in_text_close"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:gravity="end"
            style="@style/Widget.AppCompat.ActionButton"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:tint="@color/md_grey_800"
            android:adjustViewBounds="false"/>

    </LinearLayout>



</androidx.appcompat.widget.Toolbar>
