<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
          package="com.taiko.noblenote"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- for android 5.0 compatibility-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="23"
        />

    <!-- this would be added by gradle automatically, but missing maxSdkVersion -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="23"
        />

    <!--         android:icon="@mipmap/ic_launcher" -->
    <application
        android:name="com.taiko.noblenote.MainApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher_alternative"
        android:roundIcon="@mipmap/ic_launcher_alternative_round"
        tools:ignore="UnusedAttribute">


        <activity
            android:name="com.taiko.noblenote.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- android:theme="@style/Theme.Styled" -->
        <activity android:name="com.taiko.noblenote.EditorActivity">
        </activity>
    </application>

</manifest>